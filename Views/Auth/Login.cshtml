
@{
    ViewBag.Title = "Login";
}


<div class="w-full md:w-[80%] h-full md:h-[90%] bg-white border border-gray-400 shadow md:rounded-lg px-4 md:px-8 py-5 md:py-10 flex items-center">

    <div class="w-full flex flex-col items-center space-y-6">
        <div class="flex flex-col items-center">
            <h3 class="text-3xl font-semibold mb-1">Welcome <span class="text-blue-800">back!</span></h3>
            <p class="text-lg text-gray-600">Please login to your account.</p>
        </div>

        <div class="w-[90%] md:w-[80%] md:px-4 flex flex-col items-center space-y-6 mt-2">

            <div class="w-full flex flex-col">
                <input type="text" class="w-full bg-gray-100 placeholder:text-slate-400 text-slate-700 text-lg border border-slate-200 rounded-md px-3 py-3 transition duration-300 ease focus:outline
-none border-slate-400 focus:border-slate-600 hover:border-slate-600 text-center" placeholder="Enter your User ID" />

                <span class="h-[20px] w-full"></span>
            </div>

            <div class="w-full flex flex-col">
                <input type="text" class="w-full bg-gray-100 placeholder:text-slate-400 text-slate-700 text-lg border border-slate-200 rounded-md px-3 py-3 transition duration-300 ease focus:outline-none border-slate-400 focus:border-slate-600 hover:border-slate-600 text-center" placeholder="Enter your Password" />

                <span class="h-[20px] w-full"></span>
            </div>

        </div>

        <div class="w-[90%] md:w-[80%] md:px-4 flex justify-between space-x-6">
            <button class="w-[40%] rounded-md bg-blue-800 text-white px-6 py-3 text-xl cursor-pointer hover:bg-blue-900" type="button">
                Login
            </button>

            <button class="w-[40%] rounded-md bg-red-700 text-white px-6 py-3 text-xl cursor-pointer hover:bg-red-800" type="button">
                Sign Up
            </button>
        </div>
    </div>
    
</div>